<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#9444"
                android:endColor="#0000"
                android:type="linear"
                android:angle="90"
                ></gradient>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="0.5dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:tint="@color/white">
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>