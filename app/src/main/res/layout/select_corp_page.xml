<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_primaryColor="@color/indigo500"
            android:hint="검색 준비중.."
            />
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#999999"
            android:dividerHeight="1dp">
        </ListView>
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departTest"
            app:smsp_hintTextSize="20sp"
            app:smsp_showEmptyDropdown="true"
            app:smsp_enableFloatingLabel="true"
            app:smsp_floatingLabelText="부서명"/>
        <com.github.mikephil.charting.charts.RadarChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/radarChart"
            android:layout_alignParentTop="true" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnTable"
        android:background="@color/white"
        >
        <TableRow>
            <TextView
                android:text="기업명"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:id="@+id/corpName"
                android:layout_width="200dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="부서명"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:id="@+id/departName"
                android:layout_width="200dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="검색 인원"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:layout_width="200dp"
                android:id="@+id/userCntTextView"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnTable">
        <TableRow>
            <com.ornach.nobobutton.NoboButton
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="버튼"
                android:id="@+id/submitBtn"
                android:onClick="submitCorpDepart"
                android:textSize="20dp"
                app:nb_text="차트 추출"
                app:nb_borderWidth="2dp"
                app:nb_backgroundColor="#759EDE"
                app:nb_focusColor="#3989BA"
                app:nb_textColor="@color/white"
                app:nb_textSize="20sp"/>
            <com.ornach.nobobutton.NoboButton
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="버튼"
                android:id="@+id/submitWidget"
                android:onClick="moveWidget"
                android:textSize="20dp"
                app:nb_text="위젯 등록"
                app:nb_borderWidth="2dp"
                app:nb_backgroundColor="#759EDE"
                app:nb_focusColor="#3989BA"
                app:nb_textColor="@color/white"
                app:nb_textSize="20sp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>